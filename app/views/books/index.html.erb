<dir class="index-box">
<h1 class="title-font">Books</h1>
<table>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to "Show", book_path(book) %></td>
		<td><%= link_to "Edit", edit_book_path(book.id) %></td>
		<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
		<% end %>
	</tr>
</table>

<h2 class="new-font">New book</h2>

<% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_for(@book) do |f| %>
	<h4 class="form-font">Title</h4>
	<%= f.text_field :title %>
	<h4 class="form-font">Body</h4>
	<%= f.text_area :body %>

	<%= f.submit "Create Book" %>

<% end %>
</dir>